<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechProgMaui.Views.HandleExceptionTaskPage"
             xmlns:vm ="clr-namespace:TechProgMaui.ViewModels"
             Title="HandleExceptionTaskPage">
    <ContentPage.BindingContext>
        <vm:HandleExceptionTaskViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Button x:Name="StartSortWithoutBlockCancelWhenAny" Text="Start one sort with exception" Command="{Binding StartOneSortWithException}"/>
        <Label x:Name="SortedMas" Text="{Binding SortedMas}"/>
    </VerticalStackLayout>
</ContentPage>